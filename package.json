{
  "name": "nanostores-persistent-solid",
  "version": "0.1.0",
  "description": "Modified version of Nano Stores Solid that adds supports for Nano Stores Persistent in Solid SSR environments.",
  "keywords": [
    "nanostores",
    "persistent",
    "solid",
    "store",
    "localStorage",
    "state",
    "state manager"
  ],
  "author": "Vance Tan <vancetan.dev>",
  "license": "MIT",
  "homepage": "https://github.com/Kruvt/nanostores-persistent-solid",
  "publishConfig": {
    "directory": "package"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "rimraf ./package && pnpm run build && clean-publish",
    "publish": "bumpp && pnpm publish"
  },
  "peerDependencies": {
    "nanostores": "^0.6.0",
    "solid-js": ">=1.4.0"
  },
  "dependencies": {
    "nanostores": "^0.6.0"
  },
  "devDependencies": {
    "bumpp": "^8.2.1",
    "clean-publish": "^4.0.1",
    "rimraf": "^3.0.2",
    "solid-js": "^1.5.3",
    "tsup": "^6.2.3",
    "typescript": "^4.8.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "package",
    "files": [
      ".gitignore",
      "tsconfig.json",
      "tsup.config.ts"
    ]
  }
}
